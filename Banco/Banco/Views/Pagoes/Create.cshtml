@model Banco.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @if (ViewBag.error != null)
            {
                @switch (ViewBag.error)
                {
                    case (0):
                        <p class="alert alert-danger">El monto ingresado es incorrecto</p>
                        break;
                    case (1):
                        <p class="alert alert-danger">No se encontró el usuario</p>
                        break;
                }
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Admin == true)
            {
                <div class="form-group">
                    <label asp-for="id_usuario" class="control-label">Usuario</label>
                    <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.id_usuario"></select>
                </div>
            }
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="monto" class="control-label">Monto</label>
                <input asp-for="monto" class="form-control" />
                <span asp-validation-for="monto" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" style="font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid blue; " />
                <a class="btn p-2" style="color:black; font-weight:bold; text-decoration:none; border-radius : 12px; box-shadow: 3px 5px 5px rgba(3, 32, 51, .8);border: solid;" asp-action="Index">Volver</a>
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
