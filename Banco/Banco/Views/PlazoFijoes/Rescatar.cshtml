@model Banco.Models.PlazoFijo

@{
    ViewData["Title"] = "Rescatar";
}

<h1>Rescatar Plazo Fijo</h1>

<p>¿Está seguro que desea rescatar el siguiente plazo fijo?</p>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.monto)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.monto)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.fechaIni)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.fechaIni)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.fechaFin)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.fechaFin)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.tasa)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.tasa)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.pagado)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.pagado)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.titular)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.titular.apellido)
    </dd>
</dl>

<form asp-action="Rescatar" asp-route-id="@Model.id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <input type="submit" value="Rescatar" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.id" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
